<?xml version="1.0" encoding="UTF-8" ?>
<eks-source xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  xsi:noNamespaceSchemaLocation="../../../schema.xsd">
    <metadata>
        <name>Light Novel World</name>
        <base-url>https://www.lightnovelworld.co</base-url>
        <version>1.0.1</version>
        <language>en</language>
        <novel-status-map>
            <ongoing>ongoing</ongoing>
            <completed>completed</completed>
        </novel-status-map>
    </metadata>

    <discover>
        <novel-list id="trending" url="/home">
            <novel-item selector="#index > section:nth-child(4) .section-body > ul > li">
                <title>.novel-title</title>
                <cover attribute="data-src">a > figure > img</cover>
                <link attribute="href">a</link>
            </novel-item>
        </novel-list>
        <novel-list id="most-popular" url="/ranking-04061612">
            <novel-item selector="#ranking > div.container > div > ul > li">
                <title>.title</title>
                <cover attribute="data-src">img</cover>
                <link attribute="href">a</link>
            </novel-item>
        </novel-list>
        <novel-list id="recently-updated" url="/latest-updates-04061612">
            <novel-item selector="#latest-updates > div > ul > .novel-item">
                <title>.novel-title</title>
                <cover attribute="data-src">img</cover>
                <link attribute="href">a</link>
            </novel-item>
        </novel-list>
    </discover>
    <novel type="selector">
        <title>#novel .header-body .novel-info > div.main-head > h1</title>
        <cover attribute="data-src">#novel .header-body figure > img</cover>
        <author>#novel .header-body .novel-info .author > a > span</author>
        <chapter-count>#novel .header-body .novel-info div.header-stats > span:nth-child(1) strong</chapter-count>
        <views>#novel .header-body .novel-info div.header-stats > span:nth-child(2) strong</views>
        <status>#novel .header-body .novel-info div.header-stats > span:nth-child(4) strong</status>
        <genres>#novel > header > div.header-body.container > div.novel-info > div.categories > ul > li</genres>
        <description>#info > div.summary > div p</description>
    </novel>
</eks-source>